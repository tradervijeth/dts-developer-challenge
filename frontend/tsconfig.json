{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "baseUrl": "src/main",
    "paths": {
      "router/*": ["router/*"],
      "routes/*": ["routes/*"]
    },
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/codecept.conf.ts", "**/__mocks__/*", "node_modules"]
}
